<UserControl
	x:Class="MP.Contacts.Views.ContactsView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
	xmlns:local="clr-namespace:MP.Contacts.Views"
	xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
	xmlns:materialDesignConverters="clr-namespace:MaterialDesignThemes.Wpf.Converters;assembly=MaterialDesignThemes.Wpf"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	MinWidth="500"
	MinHeight="500"
	d:DesignHeight="550"
	d:DesignWidth="600"
	dialog:DialogParticipation.Register="{Binding}"
	Background="{DynamicResource MaterialDesignPaper}"
	FontFamily="{DynamicResource MaterialDesignFont}"
	FontSize="16"
	Foreground="Black"
	TextElement.FontSize="13"
	TextElement.FontWeight="Regular"
	TextElement.Foreground="{DynamicResource MaterialDesignBody}"
	TextOptions.TextFormattingMode="Ideal"
	TextOptions.TextRenderingMode="Auto"
	mc:Ignorable="d">
	<Grid Background="{StaticResource GradientColorDefault}">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="200" />
			<ColumnDefinition Width="500*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="46" />
			<RowDefinition Height="400*" />
		</Grid.RowDefinitions>
		<StackPanel
			Grid.Row="0"
			Grid.Column="1"
			Margin="0,0,0,0"
			Orientation="Horizontal">
			<TextBox
				Width="100"
				Height="Auto"
				Margin="0,0,0,10"
				materialDesign:HintAssist.Hint="Search"
				materialDesign:HintAssist.IsFloating="True"
				Text="{Binding SearchTerms, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
			<Button
				Width="Auto"
				Margin="0,0,0,0"
				Background="Transparent"
				BorderThickness="0"
				Command="{Binding RefreshCmd}"
				ToolTip="refresh">
				<StackPanel Height="Auto" Orientation="Horizontal">
					<materialDesign:PackIcon
						Width="auto"
						Height="auto"
						Margin="0,0,0,0"
						HorizontalAlignment="Stretch"
						VerticalAlignment="Stretch"
						Foreground="Blue"
						Kind="Refresh" />
				</StackPanel>
			</Button>
		</StackPanel>
		<StackPanel Grid.Row="1" Orientation="Vertical">
			<StackPanel Margin="5,5,5,5">
				<TextBox
					materialDesign:HintAssist.Hint="Name"
					materialDesign:HintAssist.IsFloating="True"
					IsReadOnly="True" />
			</StackPanel>
			<StackPanel Margin="5,5,5,5">
				<TextBox
					materialDesign:HintAssist.Hint="Company"
					materialDesign:HintAssist.IsFloating="True"
					IsReadOnly="True" />
			</StackPanel>
		</StackPanel>

		<DataGrid
			Grid.Row="1"
			Grid.Column="1"
			Background="Transparent" />
	</Grid>
</UserControl>